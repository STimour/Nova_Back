{
    "name": "projetfin",
    "version": "1.0.0",
    "description": "projet de fin, le groupe de Meldryck et Timour",
    "license": "SEE LICENSE IN LICENSE",
    "author": "Meldryck et Timour",
    "type": "commonjs",
    "main": "dist/server.js",
    "scripts": {
        "build": "npx tsc",
        "start": "node dist/server.js",
        "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write .",
        "seed": "ts-node src/script/seed.ts",
        "cron:all": "npx ts-node src/script/runCronTasks.ts",
        "cron:badges": "npx ts-node -e \"import('./src/services/helperBadge.service').then(m => new m.HelperBadgeService().updateSuperHelpers())\"",
        "cron:reputation": "npx ts-node -e \"import('./src/services/reputationHistory.service').then(m => new m.ReputationHistoryService().saveWeeklyReputation())\""
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "argon2": "^0.43.0",
        "bcrypt": "^5.1.1",
        "body-parser": "^2.2.0",
        "cors": "^2.8.5",
        "cron": "^4.3.1",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "node-cache": "^5.1.2",
        "node-cron": "^4.1.1",
        "nodemailer": "^7.0.3",
        "pg": "^8.15.1",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.7",
        "sequelize-cli": "^6.6.2",
        "socket.io": "^4.8.1",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/dotenv": "^6.1.1",
        "@types/express": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.14.1",
        "@types/nodemailer": "^6.4.17",
        "@types/sequelize": "^4.28.20",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@typescript-eslint/parser": "^8.31.0",
        "concurrently": "^9.1.2",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "nodemon": "^3.1.10",
        "prettier": "^3.5.3",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3"
    }
}
